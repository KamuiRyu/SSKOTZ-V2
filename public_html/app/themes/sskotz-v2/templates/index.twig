<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js?v=2.0"></script>
<script type="application/javascript">
    $(document).ready(function() {
        $('.slider-characters').slick({
            centerMode: true,
            slidesToShow: 5,
            centerPadding: '10px',
            arrows: true,
            responsive: [{
                breakpoint: 992,
                settings: {
                    arrows: true,
                    centerMode: true,
                    slidesToShow: 3
                }
            }, {
                breakpoint: 768,
                settings: {
                    arrows: true,
                    centerMode: true,
                    slidesToShow: 3
                }
            }, {
                breakpoint: 576,
                settings: {
                    arrows: true,
                    centerMode: true,
                    centerPadding: '10px',
                    slidesToShow: 2
                }
            }],
            prevArrow: '<button class="a-left control-c prev arrow-prev"></button>',
            nextArrow: '<button class="a-right control-c next arrow-next"></button>'
        });
        $('#main-channel-videos').slick({
            lazyLoad: 'ondemand',
            centerMode: true,
            centerPadding: '60px',
            slidesToShow: 3,
            variableWidth: true,
            responsive: [
                {
                breakpoint: 768,
                settings: {
                    arrows: false,
                    centerMode: true,
                    centerPadding: '60px',
                    slidesToShow: 2
                }
                },
                {
                breakpoint: 480,
                settings: {
                    arrows: false,
                    centerMode: true,
                    centerPadding: '40px',
                    slidesToShow: 1
                }
                }
            ]
        });
    });

    function openCharacter(characterName) {
        var i;
        var x = document.getElementsByClassName("icharacter");
        for (i = 0; i < x.length; i++) {
            var d = x[i].id;
            if (d.id != characterName) {
                $("#" + d).css({
                    display: 'none'
                }).animate({
                    opacity: 0
                }, 100)
            }
        }
        $("#" + characterName).css({
            display: 'flex'
        }).animate({
            opacity: 1
        }, 100);

    }
</script>

