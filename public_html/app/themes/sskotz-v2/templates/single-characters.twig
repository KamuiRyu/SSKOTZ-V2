{% extends "base.twig" %}
{% block head %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ site.theme.link }}/assets/css/single-characters.css?v=1.3" type="text/css" media="screen"/>
{% endblock %}

{% block content %}

	<section>
		<div class="container my-lg-5 my-3">
			<div class="row">
				<div class="col-12 col-sm-12 col-md-12 col-lg-4 col-xl-4">
					<div class="character-info mb-4 pt-0 character-block">
						<div class="ch-title mb-3">
							<span>Informações</span>
						</div>
						<div class="text-center">
							<div class="character-img {{ post.character_rarity }}-ranking mb-1">
								<img src="{{ post.character_thumb }}" class="img-fluid"/>
								<div class="character-ranking {{ character.character_rarity }}-rarity">
									<img src="{{ site.theme.link }}/assets/images/{{ post.character_rarity }}-rarity.webp" alt="Raridade do personagem"/>
								</div>
							</div>
							<h4>{{ post.character_name }}</h4>
						</div>
					</div>
					<div class="character-cosmos mb-4 pt-0 character-block">
						<div class="ch-title mb-1">
							<span>Cosmos Sugeridos</span>
						</div>
						<div class="ch-cosmo-type legendary">
							<span class="ch-cosmo-title">Lendário</span>
							<ul class="ch-cosmo-list">
								{% for cosmo in post.cosmos.legendary %}
									<li>
										<a href='{{cosmo.link}}'><img src="{{cosmo.cosmo_img.url}}"/></a>
									</li>
								{% endfor %}
							</ul>
						</div>
						<div class="ch-cosmo-type solar">
							<span class="ch-cosmo-title">Solar</span>
							<ul class="ch-cosmo-list">
								{% for cosmo in post.cosmos.solar %}
									<li>
										<a href='{{cosmo.link}}'><img src="{{cosmo.cosmo_img.url}}"/></a>
									</li>
								{% endfor %}
							</ul>
						</div>
						<div class="ch-cosmo-type lunar">
							<span class="ch-cosmo-title">Lunar</span>
							<ul class="ch-cosmo-list">
								{% for cosmo in post.cosmos.lunar %}
									<li>
										<a href='{{cosmo.link}}'><img src="{{cosmo.cosmo_img.url}}"/></a>
									</li>
								{% endfor %}
							</ul>
						</div>
						<div class="ch-cosmo-type star">
							<span class="ch-cosmo-title">Estrela</span>
							<ul class="ch-cosmo-list">
								{% for cosmo in post.cosmos.star %}
									<li>
										<a href='{{cosmo.link}}'><img src="{{cosmo.cosmo_img.url}}"/></a>
									</li>
								{% endfor %}
							</ul>
						</div>
					</div>
					<div class="character-cosmos-status mb-4 pt-0 character-block">
						<div class="ch-title">
							<span>Cosmo subatributos</span>
						</div>
						<ul class="ch-cosmo-sub-list">
							{% for sub in post.character_sub %}
								<li class="ch-cosmo-sub-item">
									<img src="{{ site.theme.link }}/assets/images/{{sub}}_icon.webp">
									{% if sub == 'atqf' %}
										<span>Ataque físico</span>
									{% elseif sub == 'atqc' %}
										<span>Ataque cósmico</span>
									{% elseif sub == 'dmgc' %}
										<span>Dano cósmico</span>
									{% elseif sub == 'nc' %}
										<span>Nível Crit. F</span>
									{% elseif sub == 'pv' %}
										<span>PV</span>
									{% elseif sub == 'deff' %}
										<span>Defesa física</span>
									{% elseif sub == 'defc' %}
										<span>Defesa cósmica</span>
									{% elseif sub == 'rs' %}
