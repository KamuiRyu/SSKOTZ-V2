														<img src="{{ skill.img }}" class="ch-skill-img">
														<div class="ch-skill-cost">
															{% set typePassive = "" %}
															{% for type in skill.type %}
																{% if type == 'Passiva' %}
																	{% set typePassive = 1 %}
																{% endif %}
															{% endfor %}
															{% if typePassive == 1 %}
																<span class="text-white font-stroke text-center"></span>
															{% else %}
																<span class="text-white font-stroke text-center">{{ skill.energy }}</span>
															{% endif %}
														</div>
													</div>
												</div>
												<div class="col-9 col-sm-9 col-md-10 col-lg-10 col-xl-10">
													
													<div class="ch-skill-more-block">
														<div class="ch-skill-name">
															<h5>{{ skill.name }}</h5>
														</div>
														<div class="ch-skill-types mt-4">
															{% for type in skill.type %}
																{% if type == 'Passiva' %}
																	<div class="ch-type-passive w-auto px-2 d-inline-block mb-1">
																		{{ type }}
																	</div>
																{% elseif type == 'Ataque básico' %}
																	<div class="ch-type-basic w-auto px-2 d-inline-block mb-1">
																		{{ type }}
																	</div>
																{% else %}
																	<div class="ch-skill-type w-auto px-2 d-inline-block mb-1">
																		{{ type }}
																	</div>
																{% endif %}
															{% endfor %}
														</div>
													</div>
												</div>
											</div>
										</div>
										<div class="row">
										<div class="ch-skill-rec">Level recomendado: {{ skill.skill_up }}</div>
											<div class="col-12">
