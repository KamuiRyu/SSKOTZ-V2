                {% if post.cosmo_type == 'legendary' %}
                  <span style="vertical-align: middle;">
                    {{ post.cosmo_bonus }}
                  </span>
                {% else %}
                  <img src="{{ site.theme.link }}/assets/images/{{
                    post.cosmo_bonus
                    }}_icon.webp" />
                  <span style="vertical-align: middle;">
                    {% if post.cosmo_bonus == 'atqf' %}
                      Ataque físico +10%
                    {% elseif post.cosmo_bonus == 'atqc' %}
                      Ataque cósmico +10%
                    {% elseif post.cosmo_bonus == 'dmgc' %}
                      Dano cósmico +5%
                    {% elseif post.cosmo_bonus == 'speed' %}
                      Velocidade +20
                    {% elseif post.cosmo_bonus == 'pv' %}
                      PV +10%
                    {% elseif post.cosmo_bonus == 'rsc' %}
                      Resistência á dano cósmico +10%
                    {% elseif post.cosmo_bonus == 'rs' %}
